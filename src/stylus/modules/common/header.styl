.header{
  z-index: 99
  position: fixed
  width: 100%
  height: 90px
  &__cont{
    width: 90%
    margin: 0 auto
    margin-top: 20px
    display: flex
    justify-content: space-between
    }
    &__logo{
      width: 100px
      &__img{
        object-fit: cover
     }
  }
  #mobile-menu{
    position relative
    width: 40px;
    height: 42px;
    overflow hidden
    cursor: pointer
    span{
      z-index: 99
      position absolute
      left 0
      transition: transform 0.5s
      display: block
      width: 100%;
      height: 2px
      background-color: #fff
    }
    span:nth-child(1){
       top: 5px
    }
    span:nth-child(2){
      top: 20px
    }
    span:nth-child(3){
      bottom: 5px
    }

  .mobile-menu{
    &__cover{
      position fixed
      left 100%
      top 0
      width 100%
      height 100vh
      background-color rgba(255, 255, 255, 0.8)
      transition all 0.5s
      }
    &__nav{
      opacity 0
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      font-size 30px
      transition all 0.7s
      }
    &__li{
      margin 10% 0px
      }
    }
  }
}


.menu-open{
  #mobile-menu{
    span{
      display: block
      width: 40px
      height: 2px
      background-color: #fff
    }
    span:nth-child(1){
       transform: translateY(15px) rotate(-45deg);
    }
    span:nth-child(2){
      transform translateX(-100px)
    }
    span:nth-child(3){
      transform: translateY(-15px) rotate(45deg);
    }
  .mobile-menu{
    &__cover{
      position fixed
      left 0
      }
    &__nav{
      opacity 1
      transition-delay 0.3s
      }
    }
  }
}
