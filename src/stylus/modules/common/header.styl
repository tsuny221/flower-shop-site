.header{
  z-index: 99
  position: fixed
  width: 100%
  height: 90px
  &__cont{
    width: 90%
    margin: 0 auto
    margin-top: 20px
    display: flex
    justify-content: space-between
    }
    &__logo{
      width: 100px
      &__img{
        object-fit: cover
     }
  }
  #mobile-menu{
    cursor: pointer
    span{
      display: block
      width: 40px
      height: 2px
      background-color: #fff
    }
    span:nth-child(1){
      margin-top: 5px
    }
    span:nth-child(2){
      margin-top: 10px
    }
    span:nth-child(3){
      margin-top: 10px
    }
  }
}
